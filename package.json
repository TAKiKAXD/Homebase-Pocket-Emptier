{
  "name": "stormslots",
  "version": "1.0.0-A",
  "description": "slots",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.stormslots",
    "productName": "HPE",
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "index.html",
      "app.js",
      "stats.js",
      "settings.js",
      "images/**/*",
      "styles.css",
      "stats.html",
      "settings.html",
      "disclaimer.html",
      "disclaimer.js",
      "debts.js",
      "debts.html"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./images/fav.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "install": "^0.13.0",
    "mongodb": "^6.9.0",
    "npm": "^10.8.3",
    "uuid": "^10.0.0"
  }
}
